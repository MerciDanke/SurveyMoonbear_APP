h1 #{title}
div id='div_form'

- if questions.length > 1
  nav aria-label="Page navigation example" id="page_nav"
    ul class="pagination" 
      li class="page-item disabled" id="page_pre"
        a class="page-link" href="javascript:void(0)" onclick="pre_page()" aria-label="Previous"
          span aria-hidden="true" &larr; Previous
          span class="sr-only" Previous
      
      li class="page-item" id="page_next"
        a class="page-link" href="javascript:void(0)" onclick="next_page()" aria-label="Next"
          span aria-hidden="true" Next &rarr;
          span class="sr-only" Next

- else
  button type="submit" class="btn btn-primary" id="btn-submit" Submit

javascript:
  $('#div_form').append("<form id='test_form'></form>");
  var page_str = '';
  $.each(#{{questions}}, function(i, question){
    if (i > 0) {
      $('#test_form').append("<div class='d-none' id='page_" + ++i + "'></div>");
    } else {
      $('#test_form').append("<div id='page_" + ++i + "'></div>");
    }
    $('#page_' + i).append(question);
  });

  var page = 1;
  function next_page() {
    $('#page_' + page).addClass('d-none');
    $('#page_' + ++page).removeClass('d-none');
    if (page >= #{{questions}}.length) {
      $('#page_next').addClass('disabled');
      $('#test_form').append('<button type="submit" class="btn btn-primary" id="btn-submit">Submit</button>');
    }
    $('#page_pre').removeClass('disabled');
  }

  function pre_page() {
    $('#page_' + page).addClass('d-none');
    $('#page_' + --page).removeClass('d-none');
    if (page === 1) {
      $('#page_pre').addClass('disabled');
    }
    $('#page_next').removeClass('disabled');
    $('#btn-submit').remove();
  }
    
