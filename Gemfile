# Communication
gem 'http'
gem 'pony'
gem 'redis'
gem 'redis-rack'

# Diagnostic
gem 'tux'

# Database related
gem 'hirb'
gem 'sequel'

# Data gems
gem 'dry-struct'
gem 'dry-types'

group :test do
  gem 'minitest'
  gem 'minitest-rg'
  gem 'rack-test'
  gem 'rake'
  gem 'simplecov'
  gem 'vcr'
  gem 'webmock'
end

group :development, :test do
  gem 'sqlite3'

  gem 'pry'
  gem 'rerun'
  
  gem 'flog'
  gem 'reek'
  gem 'rubocop'
end